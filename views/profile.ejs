<link rel='stylesheet' type='text/css' media='screen' href='/css/users_profile.css'>

<img src="<%=user.avatar %>" alt="user.name" width="100">

<% if(profile_user.id == locals.user.id ) { %>
    <form action="/users/update/<%=profile_user.id %>" enctype="multipart/form-data" method="POST">
        <input type="text" name="name" value="<%=profile_user.name %>" placeholder="Enter Name" required/>
        <input type="email" name="email" value="<%=profile_user.email %>" placeholder="Enter Email" required/>
        <input type="file" name="avatar" placeholder="Profile Picture"/>
        <input type="submit" value="Update"/>
    </form>
<% }else{ %>
    <h1>
        <small>
            <%=profile_user.name %><br>
            <%=profile_user.email %>
        </small>
    </h1>
<% } %>